<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="me.ele.app.amigo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="me.ele.app.amigo.HomeActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".demo.DemoActivity"/>

        <activity android:name=".dev.DevActivity"/>

        <activity
            android:name=".dev.SubprocessActivity"
            android:exported="true"
            android:process=".demo.subprocess"/>


        <!--test: add new activity in patch apk-->
        <activity
            android:name=".demo.StandardActivity"
            android:label="standard activity"
            android:launchMode="singleTop" />

        <activity
            android:name=".demo.SingleTopActivity"
            android:label="single top activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".demo.SingleTaskActivity"
            android:label="single task activity"
            android:launchMode="singleTask" />

        <activity
            android:name=".demo.SingleInstanceActivity"
            android:label="single instance activity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".demo.SingleInstanceActivity2"
            android:label="single instance activity 2"
            android:launchMode="singleInstance" />

        <receiver android:name=".demo.DemoReceiver">
            <intent-filter>
                <action android:name="me.ele.test" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="amigo_layout"
            android:value="amigo_layout_demo"/>

        <meta-data
            android:name="amigo_theme"
            android:value="amigoThemeDemo"/>


    </application>

</manifest>