<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/apply_patch_apk_immediately"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Patch Apk Immediately"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/apply_patch_apk_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Patch Apk Later"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/clear_patch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Patch"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/test_patched_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test patched activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/test_patched_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test patched service"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/trigger_receiver_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="trigger receiver"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>